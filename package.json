{
  "name": "nnrm",
  "type": "module",
  "version": "0.4.1",
  "packageManager": "pnpm@8.3.1",
  "description": "New npm registry manager.",
  "author": {
    "email": "me@yunyoujun.cn",
    "name": "YunYouJun",
    "url": "https://www.yunyoujun.cn"
  },
  "license": "MIT",
  "repository": "https://github.com/YunYouJun/nnrm",
  "keywords": [
    "npm",
    "registry",
    "toggle",
    "manager"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "bin": {
    "nnrm": "dist/index.js",
    "nrm": "dist/index.js",
    "nyrm": "dist/yrm.js",
    "prm": "dist/prm.js",
    "yrm": "dist/yrm.js"
  },
  "files": [
    "dist",
    "registries.json"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build": "tsup",
    "coverage": "vitest run --coverage",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "ls": "node dist/index.js ls",
    "play": "node dist/index.js",
    "test": "npm run ls && npm run test:add && npm run test:remove && npm run test:test",
    "test:add": "node dist/index.js add yyj https://www.yunyoujun.cn",
    "test:remove": "node dist/index.js remove yyj",
    "test:test": "node dist/index.js test",
    "test:use": "node dist/index.js use taobao",
    "typecheck": "tsc --noEmit",
    "vitest": "vitest",
    "prepublishOnly": "npm run build",
    "postinstall": "echo '`nnrm ls` to use'",
    "release": "bumpp --commit --push --tag"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.5",
    "@vitest/coverage-c8": "^0.30.1",
    "bumpp": "^9.1.0",
    "cac": "^6.7.14",
    "eslint": "^8.39.0",
    "execa": "^7.1.1",
    "node-fetch": "^3.3.1",
    "picocolors": "^1.0.0",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
